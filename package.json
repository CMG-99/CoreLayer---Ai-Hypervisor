{
  "name": "corelayer-ai-hypervisor",
  "version": "2.0.0",
  "description": "CoreLayer AI HyperVisor - Hyper-V Management with AI Assistant",
  "main": "main.js",
  "author": "CoreLayer Technologies",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist:win": "electron-builder --win",
    "dist:win32": "electron-builder --win --ia32",
    "dist:win64": "electron-builder --win --x64",
    "dist:msi": "electron-builder --win msi",
    "dist:all": "electron-builder --win nsis msi portable"
  },
  "keywords": [
    "hyperv",
    "vm",
    "virtualization",
    "ai",
    "management"
  ],
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.corelayer.hypervisor",
    "productName": "CoreLayer AI HyperVisor",
    "copyright": "Copyright Â© 2026 CoreLayer Technologies",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "splash.html",
      "renderer.js",
      "styles.css",
      "diagnostic.js",
      "install-ollama.js",
      "LoadImage.png",
      "Icon.ico",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "Icon.ico",
        "to": "Icon.ico"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "msi",
          "arch": ["x64"]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "publisherName": "CoreLayer Technologies"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CoreLayer AI HyperVisor",
      "perMachine": true,
      "license": null,
      "artifactName": "CoreLayer-AI-HyperVisor-Setup-${version}.${ext}"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "artifactName": "CoreLayer-AI-HyperVisor-${version}.${ext}"
    },
    "portable": {
      "artifactName": "CoreLayer-AI-HyperVisor-Portable-${version}.${ext}"
    }
  }
}
